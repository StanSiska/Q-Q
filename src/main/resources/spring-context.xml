<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:tx="http://www.springframework.org/schema/tx"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd 
    http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-3.0.xsd">

    <bean id="abstractDao" abstract="true">
        <property name="dataSource" ref="dataSource" />
    </bean>

    <bean id="groupDAO" class="dao.impl.GroupDAOImpl" parent="abstractDao" />
    <bean id="messageDAO" class="dao.impl.MessageDAOImpl" parent="abstractDao" />

    <bean id="groupService" class="service.impl.GroupServiceImpl">
        <constructor-arg name="dao" ref="groupDAO" />
    </bean>
    <bean id="messageService" class="service.impl.MessageServiceImpl">
        <constructor-arg name="dao" ref="messageDAO" />
    </bean>
</beans>